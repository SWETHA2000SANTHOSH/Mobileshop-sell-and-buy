@model MobileShopWebsite.Models.ad_view_model
@{
    ViewBag.Title = "ViewAdd";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class= "row">
    <div class="col-lg-12 col-md-12">
        <img src="~/Content/img/viewaddbg.jpg" class="img img-responsive" style="width:100%"/>
    </div>
</div>
<div class="col-lg-8 col-md-8">
    <div>
        <h1>@Model.pdt_name <small>AD-ID:@Model.pdt_id</small></h1>
    </div>

    <img src="@Url.Content(@Model.pdt_img)" style="width:300PX; height:250PX" />

    <div>
        <h2>Description: </h2>
        <p>@Model.pdt_desc</p>
    </div>

    <table>

        <tr> <td><b>Price: </b></td> <td>@Model.pdt_price </td> </tr>
        <tr> <td><b>Category: </b></td> <td>@Model.cat_name </td> </tr>
        <tr> <td><b>Posted by: </b></td> <td>@Model.u_name <img src="@Url.Content(@Model.u_img)" style="width:40px; height:40px" /> </td> </tr>
        <tr> <td><b>Contact: </b></td> <td>@Model.u_contact  </td> </tr>


        <tr>
            <td colspan="2">
                @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pdt_user_id_fk))
                 {

                    @Html.ActionLink("Close this Ad", "Ad_Delete", new { @class = "btn btn-danger", id = Model.pdt_id })

                 }
            </td>
        </tr>

    </table>
</div>


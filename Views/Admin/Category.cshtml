@model MobileShopWebsite.Models.category
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<html>
<head>
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);
        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <title>Add category</title>
</head>
<body>
    <h2>Category</h2>
    @using (Html.BeginForm("Category", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div style="background-image: url('../../content/img/backgrnd1.jpg');">

            <div style="padding-left:400px; padding-bottom:100px; padding-top:100px;">
                <div style="padding-left: 50px;  background-image: url('../../content/img/backgrnd.jpg'); width: 400px; height: 300px; border-radius:20px; ">
                    <div style="align-content:center; padding-top:10px;">

                        <h3 style="padding-left:100px; font:300; font-family:'Times New Roman', Times, serif"><b>ADD CATEGORY</b></h3>
                        <br />
                        <div style="padding-left: 40px">
                            <label><b>Category Name</b></label><br /><br />
                            @Html.TextBoxFor(x => x.cat_name, new { @class = "form-control", @placeholder = "Category Name" })
                            <span style="color:red">@Html.ValidationMessageFor(x => x.cat_name)</span>
                            <br /><br />
                            <label><b>Image</b></label><br /><br />
                            <input type="file" name="imgfile" id="imgfile" class="input" required />
                            <br />
                            <br />
                        </div>
                        <span style="padding-left:40px"><b><input type="submit" value="Add" style="background-color:green; width:200px; height:30px; border:1px; border-radius:5px; font-size:larger;"></b></span>
                        <br />
                    </div>
                </div>

            </div>
        </div>
    }
</body>
</html>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

